# file Makefile
# make file for CrdWznmVec card job handler, release wznmcmbd_genio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmVec.o PnlWznmVecList.o QryWznmVecList.o PnlWznmVecHeadbar.o PnlWznmVecRec.o PnlWznmVecPst1NQuerymod.o QryWznmVecPst1NQuerymod.o PnlWznmVecMNTable.o QryWznmVecMNTable.o PnlWznmVecSrc1NFeed.o QryWznmVecSrc1NFeed.o PnlWznmVecRef1NPanel.o QryWznmVecRef1NPanel.o PnlWznmVecFct1NTablecol.o QryWznmVecFct1NTablecol.o PnlWznmVecVec1NVectoritem.o QryWznmVecVec1NVectoritem.o PnlWznmVecATitle.o QryWznmVecATitle.o PnlWznmVecDetail.o

LIB = libcrdwznmvec

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

