include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWznmSbs.o PnlWznmSbsRec.o PnlWznmSbs1NTablecol.o QryWznmSbs1NTablecol.o PnlWznmSbs1NStub.o QryWznmSbs1NStub.o PnlWznmSbsTos1NRelation.o QryWznmSbsTos1NRelation.o PnlWznmSbsATitle.o QryWznmSbsATitle.o PnlWznmSbsDetail.o PnlWznmSbsFrs1NRelation.o QryWznmSbsFrs1NRelation.o PnlWznmSbsPst1NQuerymod.o QryWznmSbsPst1NQuerymod.o PnlWznmSbsAsbMNSubset.o QryWznmSbsAsbMNSubset.o PnlWznmSbsBsbMNSubset.o QryWznmSbsBsbMNSubset.o PnlWznmSbsHeadbar.o PnlWznmSbsList.o QryWznmSbsList.o

LIB = libcrdwznmsbs

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

