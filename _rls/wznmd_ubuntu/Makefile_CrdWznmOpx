include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWznmOpx.o PnlWznmOpxList.o QryWznmOpxList.o PnlWznmOpxHeadbar.o PnlWznmOpxRec.o PnlWznmOpxMNJob.o QryWznmOpxMNJob.o PnlWznmOpxSqkMNStub.o QryWznmOpxSqkMNStub.o PnlWznmOpxAInvarg.o QryWznmOpxAInvarg.o PnlWznmOpxRef1NBlock.o QryWznmOpxRef1NBlock.o PnlWznmOpxARetval.o QryWznmOpxARetval.o PnlWznmOpxDetail.o

LIB = libcrdwznmopx

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

