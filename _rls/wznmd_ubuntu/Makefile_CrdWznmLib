include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWznmLib.o PnlWznmLibList.o QryWznmLibList.o PnlWznmLibHeadbar.o PnlWznmLibRec.o PnlWznmLibMNComponent.o QryWznmLibMNComponent.o PnlWznmLibMNOppack.o QryWznmLibMNOppack.o PnlWznmLibRef1NFile.o QryWznmLibRef1NFile.o PnlWznmLibAPkglist.o QryWznmLibAPkglist.o PnlWznmLibAMakefile.o QryWznmLibAMakefile.o PnlWznmLibDetail.o

LIB = libcrdwznmlib

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o
