include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWznmNav.o DlgWznmNavLoaini.o DlgWznmNavMnglic.o PnlWznmNavHeadbar.o PnlWznmNavPre.o PnlWznmNavAdmin.o PnlWznmNavGlobal.o PnlWznmNavProject.o PnlWznmNavDbstr.o PnlWznmNavUix.o PnlWznmNavComp.o PnlWznmNavJob.o PnlWznmNavDeploy.o PnlWznmNavAppdev.o PnlWznmNavAuxfct.o

LIB = libcrdwznmnav

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o
