# file Makefile
# make file for operation pack WznmWrsrv, release wznmopd1_jack
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd1/VecWznm -I$(SRCROOT)/wznmopd1/IexWznm -I$(SRCROOT)/wznmopd1
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = WznmWrsrv_blks.o WznmWrsrv.o
OBJS += WznmWrsrvBase.o WznmWrsrvCmbengbase.o WznmWrsrvCrd.o WznmWrsrvDds.o WznmWrsrvDeploy.o WznmWrsrvDlg.o WznmWrsrvEngbase.o WznmWrsrvIex.o WznmWrsrvInixml.o WznmWrsrvJob.o WznmWrsrvOp.o WznmWrsrvOpengbase.o WznmWrsrvOpk.o WznmWrsrvPnl.o WznmWrsrvPref.o WznmWrsrvQry.o WznmWrsrvRootsess.o WznmWrsrvUa.o WznmWrsrvVec.o

LIB = libwznmwrsrv

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd1/

clean:
	rm -f *.o

