# file Makefile
# make file for CrdWznmCmp card job handler, release wznmcmbd_awsubt
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/home/ubuntu/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWznmCmp.o PnlWznmCmpRec.o PnlWznmCmpDetail.o PnlWznmCmp1NRelease.o QryWznmCmp1NRelease.o PnlWznmCmpMNLibrary.o QryWznmCmpMNLibrary.o PnlWznmCmpMNOppack.o QryWznmCmpMNOppack.o PnlWznmCmpHeadbar.o PnlWznmCmpList.o QryWznmCmpList.o

LIB = libcrdwznmcmp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

