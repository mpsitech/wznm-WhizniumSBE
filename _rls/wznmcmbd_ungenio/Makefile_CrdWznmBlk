# file Makefile
# make file for CrdWznmBlk card job handler, release wznmcmbd_ungenio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmBlk.o PnlWznmBlkList.o QryWznmBlkList.o PnlWznmBlkHeadbar.o PnlWznmBlkRec.o PnlWznmBlk1NRtdpch.o QryWznmBlk1NRtdpch.o PnlWznmBlkRef1NRtblock.o QryWznmBlkRef1NRtblock.o PnlWznmBlkAItem.o QryWznmBlkAItem.o PnlWznmBlkDetail.o

LIB = libcrdwznmblk

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

