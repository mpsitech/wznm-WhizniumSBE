# file Makefile
# make file for CrdWznmTco card job handler, release wznmcmbd_ungenio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmTco.o PnlWznmTcoList.o QryWznmTcoList.o PnlWznmTcoHeadbar.o PnlWznmTcoRec.o PnlWznmTco1NCheck.o QryWznmTco1NCheck.o PnlWznmTcoRef1NControl.o QryWznmTcoRef1NControl.o PnlWznmTcoRef1NQuerymod.o QryWznmTcoRef1NQuerymod.o PnlWznmTco1NQuerycol.o QryWznmTco1NQuerycol.o PnlWznmTco1NImpexpcol.o QryWznmTco1NImpexpcol.o PnlWznmTcoATitle.o QryWznmTcoATitle.o PnlWznmTcoDetail.o

LIB = libcrdwznmtco

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

