# file Makefile
# make file for CrdWznmQry card job handler, release wznmd_ungenio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmQry.o PnlWznmQryList.o QryWznmQryList.o PnlWznmQryHeadbar.o PnlWznmQryRec.o PnlWznmQryMNPanel.o QryWznmQryMNPanel.o PnlWznmQryMNDialog.o QryWznmQryMNDialog.o PnlWznmQryMNTable.o QryWznmQryMNTable.o PnlWznmQrySup1NQuery.o QryWznmQrySup1NQuery.o PnlWznmQry1NQuerymod.o QryWznmQry1NQuerymod.o PnlWznmQryQry1NQuerycol.o QryWznmQryQry1NQuerycol.o PnlWznmQryAOrder.o QryWznmQryAOrder.o PnlWznmQryAClause.o QryWznmQryAClause.o PnlWznmQryDetail.o

LIB = libcrdwznmqry

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

