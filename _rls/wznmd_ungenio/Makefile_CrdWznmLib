# file Makefile
# make file for CrdWznmLib card job handler, release wznmd_ungenio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmLib.o PnlWznmLibList.o QryWznmLibList.o PnlWznmLibHeadbar.o PnlWznmLibRec.o PnlWznmLibMNOppack.o QryWznmLibMNOppack.o PnlWznmLibMNComponent.o QryWznmLibMNComponent.o PnlWznmLibRef1NFile.o QryWznmLibRef1NFile.o PnlWznmLibAMakefile.o QryWznmLibAMakefile.o PnlWznmLibAPkglist.o QryWznmLibAPkglist.o PnlWznmLibDetail.o

LIB = libcrdwznmlib

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

