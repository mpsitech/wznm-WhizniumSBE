# file Makefile
# make file for operation pack WznmCtpGenui, release wznmopd2_awsubt
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd2/VecWznm -I$(SRCROOT)/wznmopd2/IexWznm -I$(SRCROOT)/wznmopd2
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = WznmCtpGenui_blks.o WznmCtpGenui.o
OBJS += WznmCtpGenuiAcv.o WznmCtpGenuiDlgimp.o WznmCtpGenuiDlgloaini.o

LIB = libwznmctpgenui

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd2/

clean:
	rm -f *.o

