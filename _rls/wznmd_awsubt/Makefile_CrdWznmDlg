# file Makefile
# make file for CrdWznmDlg card job handler, release wznmd_awsubt
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/home/ubuntu/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWznmDlg.o PnlWznmDlgRec.o PnlWznmDlgDetail.o PnlWznmDlgHk1NControl.o QryWznmDlgHk1NControl.o PnlWznmDlgRef1NControl.o QryWznmDlgRef1NControl.o PnlWznmDlgMNQuery.o QryWznmDlgMNQuery.o PnlWznmDlgHeadbar.o PnlWznmDlgList.o QryWznmDlgList.o

LIB = libcrdwznmdlg

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

