# file Makefile
# make file for CrdWznmNav card job handler, release wznmd_jack
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmNav.o PnlWznmNavAuxfct.o PnlWznmNavAppdev.o PnlWznmNavDeploy.o PnlWznmNavJob.o PnlWznmNavComp.o PnlWznmNavUix.o PnlWznmNavDbstr.o PnlWznmNavProject.o PnlWznmNavGlobal.o PnlWznmNavAdmin.o PnlWznmNavPre.o PnlWznmNavHeadbar.o DlgWznmNavMnglic.o DlgWznmNavLoaini.o

LIB = libcrdwznmnav

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

