# file Makefile
# make file for CrdWznmCmp card job handler, release wznmd_jack
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmCmp.o PnlWznmCmpList.o QryWznmCmpList.o PnlWznmCmpHeadbar.o PnlWznmCmpRec.o PnlWznmCmpMNLibrary.o QryWznmCmpMNLibrary.o PnlWznmCmpMNOppack.o QryWznmCmpMNOppack.o PnlWznmCmp1NRelease.o QryWznmCmp1NRelease.o PnlWznmCmpDetail.o

LIB = libcrdwznmcmp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

