include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmCtp.o PnlWznmCtpList.o QryWznmCtpList.o PnlWznmCtpRec.o PnlWznmCtpAPar.o QryWznmCtpAPar.o PnlWznmCtp1NTag.o QryWznmCtp1NTag.o PnlWznmCtpTpl1NCapability.o QryWznmCtpTpl1NCapability.o PnlWznmCtpKParKey.o QryWznmCtpKParKey.o PnlWznmCtpKKey.o QryWznmCtpKKey.o PnlWznmCtpDetail.o PnlWznmCtpHeadbar.o

LIB = libcrdwznmctp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

