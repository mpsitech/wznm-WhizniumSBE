CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmd/VecWznm -I$(BUILDROOT)/wznmd/IexWznm -I$(BUILDROOT)/wznmd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWznmJob.o PnlWznmJobList.o QryWznmJobList.o PnlWznmJobHeadbar.o PnlWznmJobRec.o PnlWznmJobSubMNJob.o QryWznmJobSubMNJob.o PnlWznmJobSupMNJob.o QryWznmJobSupMNJob.o PnlWznmJobMNOp.o QryWznmJobMNOp.o PnlWznmJobMNOppack.o QryWznmJobMNOppack.o PnlWznmJobRef1NBlock.o QryWznmJobRef1NBlock.o PnlWznmJobHk1NVector.o QryWznmJobHk1NVector.o PnlWznmJob1NSensitivity.o QryWznmJob1NSensitivity.o PnlWznmJob1NRtjob.o QryWznmJob1NRtjob.o PnlWznmJobJob1NStage.o QryWznmJobJob1NStage.o PnlWznmJob1NMethod.o QryWznmJob1NMethod.o PnlWznmJobACmd.o QryWznmJobACmd.o PnlWznmJobAVar.o QryWznmJobAVar.o PnlWznmJobDetail.o

LIB = libcrdwznmjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

