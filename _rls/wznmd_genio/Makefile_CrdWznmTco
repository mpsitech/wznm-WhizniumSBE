# file Makefile
# make file for CrdWznmTco card job handler, release wznmd_genio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmTco.o PnlWznmTcoList.o QryWznmTcoList.o PnlWznmTcoHeadbar.o PnlWznmTcoRec.o PnlWznmTco1NCheck.o QryWznmTco1NCheck.o PnlWznmTcoRef1NControl.o QryWznmTcoRef1NControl.o PnlWznmTcoRef1NQuerymod.o QryWznmTcoRef1NQuerymod.o PnlWznmTco1NQuerycol.o QryWznmTco1NQuerycol.o PnlWznmTco1NImpexpcol.o QryWznmTco1NImpexpcol.o PnlWznmTcoATitle.o QryWznmTcoATitle.o PnlWznmTcoDetail.o

LIB = libcrdwznmtco

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

