# file Makefile
# make file for CrdWznmRtj card job handler, release wznmd_genio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmRtj.o PnlWznmRtjList.o QryWznmRtjList.o PnlWznmRtjHeadbar.o PnlWznmRtjRec.o PnlWznmRtjSup1NRtjob.o QryWznmRtjSup1NRtjob.o PnlWznmRtj1NRtblock.o QryWznmRtj1NRtblock.o PnlWznmRtj1NRtdpch.o QryWznmRtj1NRtdpch.o PnlWznmRtjDetail.o

LIB = libcrdwznmrtj

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

