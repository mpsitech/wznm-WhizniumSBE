# file Makefile
# make file for Wznm system vectors, release wznmd_genio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = VecWznmVBasereptype.o VecWznmVCall.o VecWznmVDpch.o VecWznmVError.o VecWznmVExpstate.o VecWznmVIop.o VecWznmVJob.o VecWznmVMimetype.o VecWznmVOpengtype.o VecWznmVOppack.o VecWznmVQrystate.o VecWznmVReqitmode.o VecWznmVStub.o VecWznmVTag.o

LIB = libvecwznm

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/

clean:
	rm -f *.o

