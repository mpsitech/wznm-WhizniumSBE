# file Makefile
# make file for CrdWznmApp card job handler, release wznmd_genio
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmApp.o PnlWznmAppList.o QryWznmAppList.o PnlWznmAppHeadbar.o PnlWznmAppRec.o PnlWznmApp1NRtjob.o QryWznmApp1NRtjob.o PnlWznmAppRef1NFile.o QryWznmAppRef1NFile.o PnlWznmAppApp1NSequence.o QryWznmAppApp1NSequence.o PnlWznmApp1NEvent.o QryWznmApp1NEvent.o PnlWznmAppDetail.o DlgWznmAppImpstr.o DlgWznmAppWrite.o DlgWznmAppNew.o

LIB = libcrdwznmapp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

