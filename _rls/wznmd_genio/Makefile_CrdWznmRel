# file Makefile
# make file for CrdWznmRel card job handler, release wznmd_genio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmd/VecWznm -I$(SRCROOT)/wznmd/IexWznm -I$(SRCROOT)/wznmd
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmRel.o PnlWznmRelList.o QryWznmRelList.o PnlWznmRelHeadbar.o PnlWznmRelRec.o PnlWznmRelRef1NDialog.o QryWznmRelRef1NDialog.o PnlWznmRelRef1NControl.o QryWznmRelRef1NControl.o PnlWznmRelRef1NPanel.o QryWznmRelRef1NPanel.o PnlWznmRelSup1NRelation.o QryWznmRelSup1NRelation.o PnlWznmRel1NTablecol.o QryWznmRel1NTablecol.o PnlWznmRelATitle.o QryWznmRelATitle.o PnlWznmRelDetail.o

LIB = libcrdwznmrel

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmd/

clean:
	rm -f *.o

