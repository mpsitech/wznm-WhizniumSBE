include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswznm -I$(BUILDROOT)/wznmcmbd/VecWznm -I$(BUILDROOT)/wznmcmbd/IexWznm -I$(BUILDROOT)/wznmcmbd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWznmCtp.o PnlWznmCtpRec.o PnlWznmCtpDetail.o PnlWznmCtpKParKey.o QryWznmCtpKParKey.o PnlWznmCtpKKey.o QryWznmCtpKKey.o PnlWznmCtpAPar.o QryWznmCtpAPar.o PnlWznmCtp1NTag.o QryWznmCtp1NTag.o PnlWznmCtpTpl1NCapability.o QryWznmCtpTpl1NCapability.o PnlWznmCtpHeadbar.o PnlWznmCtpList.o QryWznmCtpList.o

LIB = libcrdwznmctp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

