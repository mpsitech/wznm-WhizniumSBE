# file Makefile
# make file for CrdWznmSbs card job handler, release wznmcmbd_jack
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmSbs.o PnlWznmSbsRec.o PnlWznmSbsDetail.o PnlWznmSbsATitle.o QryWznmSbsATitle.o PnlWznmSbsFrs1NRelation.o QryWznmSbsFrs1NRelation.o PnlWznmSbsTos1NRelation.o QryWznmSbsTos1NRelation.o PnlWznmSbs1NTablecol.o QryWznmSbs1NTablecol.o PnlWznmSbs1NStub.o QryWznmSbs1NStub.o PnlWznmSbsPst1NQuerymod.o QryWznmSbsPst1NQuerymod.o PnlWznmSbsAsbMNSubset.o QryWznmSbsAsbMNSubset.o PnlWznmSbsBsbMNSubset.o QryWznmSbsBsbMNSubset.o PnlWznmSbsHeadbar.o PnlWznmSbsList.o QryWznmSbsList.o

LIB = libcrdwznmsbs

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

