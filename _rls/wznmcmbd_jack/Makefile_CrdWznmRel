# file Makefile
# make file for CrdWznmRel card job handler, release wznmcmbd_jack
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmRel.o PnlWznmRelRec.o PnlWznmRelDetail.o PnlWznmRelATitle.o QryWznmRelATitle.o PnlWznmRelSup1NRelation.o QryWznmRelSup1NRelation.o PnlWznmRel1NTablecol.o QryWznmRel1NTablecol.o PnlWznmRelRef1NControl.o QryWznmRelRef1NControl.o PnlWznmRelRef1NDialog.o QryWznmRelRef1NDialog.o PnlWznmRelRef1NPanel.o QryWznmRelRef1NPanel.o PnlWznmRelHeadbar.o PnlWznmRelList.o QryWznmRelList.o

LIB = libcrdwznmrel

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

