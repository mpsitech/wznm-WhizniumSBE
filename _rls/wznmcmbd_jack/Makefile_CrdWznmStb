# file Makefile
# make file for CrdWznmStb card job handler, release wznmcmbd_jack
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmStb.o PnlWznmStbList.o QryWznmStbList.o PnlWznmStbHeadbar.o PnlWznmStbRec.o PnlWznmStbMNCall.o QryWznmStbMNCall.o PnlWznmStbMNSquawk.o QryWznmStbMNSquawk.o PnlWznmStbSubMNStub.o QryWznmStbSubMNStub.o PnlWznmStbSupMNStub.o QryWznmStbSupMNStub.o PnlWznmStbDetail.o

LIB = libcrdwznmstb

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

