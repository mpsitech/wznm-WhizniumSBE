# file Makefile
# make file for CrdWznmJob card job handler, release wznmcmbd_jack
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZNMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmcmbd/VecWznm -I$(SRCROOT)/wznmcmbd/IexWznm -I$(SRCROOT)/wznmcmbd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWznmJob.o PnlWznmJobRec.o PnlWznmJobDetail.o PnlWznmJobACmd.o QryWznmJobACmd.o PnlWznmJobAVar.o QryWznmJobAVar.o PnlWznmJob1NSensitivity.o QryWznmJob1NSensitivity.o PnlWznmJobJob1NStage.o QryWznmJobJob1NStage.o PnlWznmJob1NRtjob.o QryWznmJob1NRtjob.o PnlWznmJob1NMethod.o QryWznmJob1NMethod.o PnlWznmJobRef1NBlock.o QryWznmJobRef1NBlock.o PnlWznmJobHk1NVector.o QryWznmJobHk1NVector.o PnlWznmJobSupMNJob.o QryWznmJobSupMNJob.o PnlWznmJobMNOp.o QryWznmJobMNOp.o PnlWznmJobMNOppack.o QryWznmJobMNOppack.o PnlWznmJobSubMNJob.o QryWznmJobSubMNJob.o PnlWznmJobHeadbar.o PnlWznmJobList.o QryWznmJobList.o

LIB = libcrdwznmjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmcmbd/

clean:
	rm -f *.o

