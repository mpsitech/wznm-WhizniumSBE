# file Makefile
# make file for operation pack WznmCtpWrstkit, release wznmopd2_jack
# author Alexander Wirthmueller
# date created: 27 Aug 2020
# modified: 27 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd2/VecWznm -I$(SRCROOT)/wznmopd2/IexWznm -I$(SRCROOT)/wznmopd2
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = WznmCtpWrstkit_blks.o WznmCtpWrstkit.o
OBJS += WznmCtpWrstkitAcv.o WznmCtpWrstkitArm.o

LIB = libwznmctpwrstkit

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd2/

clean:
	rm -f *.o

