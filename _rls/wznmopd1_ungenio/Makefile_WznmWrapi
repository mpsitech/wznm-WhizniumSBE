# file Makefile
# make file for operation pack WznmWrapi, release wznmopd1_ungenio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd1/VecWznm -I$(SRCROOT)/wznmopd1/IexWznm -I$(SRCROOT)/wznmopd1
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = WznmWrapi_blks.o WznmWrapi.o
OBJS += WznmWrapiBase.o WznmWrapiDeploy.o WznmWrapiJob.o WznmWrapiQtb.o

LIB = libwznmwrapi

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd1/

clean:
	rm -f *.o

