# file Makefile
# make file for Wznm import complexes, release wznmopd1_awsubt
# author Alexander Wirthmueller
# date created: 25 Aug 2020
# modified: 25 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd1/VecWznm -I$(SRCROOT)/wznmopd1
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = IexWznmApp.o IexWznmBui.o IexWznmDbs.o IexWznmDpl.o IexWznmGbl.o IexWznmIex.o IexWznmIni.o IexWznmJob.o IexWznmJtr.o IexWznmOpk.o IexWznmPrj.o IexWznmUix.o

LIB = libiexwznm

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd1/

clean:
	rm -f *.o

