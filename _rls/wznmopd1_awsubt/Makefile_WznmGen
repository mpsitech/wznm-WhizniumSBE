# file Makefile
# make file for operation pack WznmGen, release wznmopd1_awsubt
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswznm -I$(SRCROOT)/wznmopd1/VecWznm -I$(SRCROOT)/wznmopd1/IexWznm -I$(SRCROOT)/wznmopd1
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = WznmGen_blks.o WznmGen.o
OBJS += WznmGenBase.o WznmGenCal.o WznmGenChk.o WznmGenDetui.o WznmGenJob.o WznmGenQtb.o WznmGenSysvec.o

LIB = libwznmgen

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wznmopd1/

clean:
	rm -f *.o

